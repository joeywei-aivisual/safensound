rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read and write their own profile
      allow read, write: if isOwner(userId);
    }
    
    // Heartbeats collection
    match /heartbeats/{heartbeatId} {
      // Users can create their own heartbeats
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Users can read their own heartbeats
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // No updates or deletes allowed
      allow update, delete: if false;
    }
    
    // Scheduled alerts collection (managed by Cloud Functions)
    match /scheduled_alerts/{alertId} {
      // Users can read their own alerts
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Only Cloud Functions can write
      allow write: if false;
    }
    
    // FCM tokens collection
    match /fcm_tokens/{tokenId} {
      // Users can read and write their own tokens
      allow read, write: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
